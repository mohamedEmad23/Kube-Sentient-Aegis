# =============================================================================
# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org
# =============================================================================

root = true

# -----------------------------------------------------------------------------
# Default settings for all files
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# -----------------------------------------------------------------------------
# Python files
# -----------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 100

# -----------------------------------------------------------------------------
# YAML files
# -----------------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2

# -----------------------------------------------------------------------------
# JSON files
# -----------------------------------------------------------------------------
[*.json]
indent_size = 2

# -----------------------------------------------------------------------------
# TOML files
# -----------------------------------------------------------------------------
[*.toml]
indent_size = 4

# -----------------------------------------------------------------------------
# Markdown files
# -----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# -----------------------------------------------------------------------------
# Makefiles (require tabs)
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab

# -----------------------------------------------------------------------------
# Shell scripts
# -----------------------------------------------------------------------------
[*.sh]
indent_size = 2

# -----------------------------------------------------------------------------
# Docker files
# -----------------------------------------------------------------------------
[Dockerfile*]
indent_size = 4

# -----------------------------------------------------------------------------
# Kubernetes manifests
# -----------------------------------------------------------------------------
[*.{yaml,yml}]
indent_size = 2

# -----------------------------------------------------------------------------
# Helm templates
# -----------------------------------------------------------------------------
[templates/**/*.yaml]
indent_size = 2

# -----------------------------------------------------------------------------
# JavaScript/TypeScript (if any)
# -----------------------------------------------------------------------------
[*.{js,ts,jsx,tsx}]
indent_size = 2

# -----------------------------------------------------------------------------
# HTML files
# -----------------------------------------------------------------------------
[*.html]
indent_size = 2

# -----------------------------------------------------------------------------
# CSS files
# -----------------------------------------------------------------------------
[*.css]
indent_size = 2
